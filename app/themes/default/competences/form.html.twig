<form action="{{ site_url('competences/form') }}" method="post">
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th colspan="5">Level Kompetensi</th>
				<th rowspan="2">Pernyataan</th>
				<th colspan="5">Kontribusi Kampus</th>
			</tr>
			<tr>
				<th>1</th> <th>2</th> <th>3</th> <th>4</th> <th>5</th>
				<th>1</th> <th>2</th> <th>3</th> <th>4</th> <th>5</th>
			</tr>

		</thead>
		<tbody>
		{% for competence in competences.get() %}
		<tr>
			{% for i in range(1,5) %}
			<td>
				    <input name="answer[{{ competence.id }}][level]" value="{{ i }}" type="radio"/>
			</td>
			{% endfor %}
			<td>{{ competence.statement }}</td>
		
			{% for i in range(1,5) %}
			<td>
				    <input name="answer[{{ competence.id }}][contribution]" value="{{ i }}" type="radio"/>
			</td>
			{% endfor %}
		</tr>
		{% endfor %}
		</tbody>
	</table>

	<input type="submit" value="Submit" class="btn btn-large btn-primary"/>
	<input type="reset" value="Reset" class="btn btn-large "/>
</form>

{% endblock %}